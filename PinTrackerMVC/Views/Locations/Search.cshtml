@using PinTrackerMVC.Models

<div class="card">
    <img class="img-fluid card-img" src="https://i.imgur.com/lJPf7Ea.png">
    <div class="card-img-overlay d-flex">
      <div class="my-auto mx-auto text-center">
        <h1 class="card-title text-light">Search Results</h1>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
          @foreach (Location location in Model)
      {
        <h3 class="card-body">@Html.ActionLink($"{ @location.name }", "Details", "Locations", new { id = location.id}, new { @class = "link" }) <br>
          @location.street, @location.city, @location.state @location.zip <br>
          Ph: @location.phone </h3>
  
        <h3 class="card-body">Machines available to play at @location.name:</h3>
        @foreach (MachineDetails details in location.MachineDetails)
        {
          <ul>
            <li>@Html.ActionLink($"{@details.Name}", "Details", "Machines", new {machId = @details.Id }, new { @class= "link"})</li>
          </ul>
        }
        <hr>
      }
    </div>
  </div>
</div>
