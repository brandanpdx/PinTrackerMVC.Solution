<div class="card">
    <img class="img-fluid card-img" src="https://i.imgur.com/lJPf7Ea.png">
    <div class="card-img-overlay d-flex">
      <div class="my-auto mx-auto text-center">
        <h1 class="card-title text-light">Details</h1>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-body text-center">
        <h3>@Model.name</h3>
        <p>Year: @Model.year</p>
        <p>Manufacturer: @Model.manufacturer</p>
        <p><a href="@Model.ipdb_link">Specs</a></p>
        <br>
        <hr>
        <h3 class="text-center">Locations With This Machine:</h3>
        <br>
         
      <div class="row">
        @foreach (Location locationItem in ViewBag.MachineLocations)
        {
          <div class="col-md-4 text-center">
          <p>@Html.ActionLink($"{@locationItem.name}", "Details", "Locations", new { id = locationItem.id } , new { @class = "link" })</p>
          </div>
        }
      </div>
    </div>
  </div>