@{
    ViewData["Title"] = "Home Page";
}
<div class="card">
    <img class="img-fluid card-img" src="https://i.imgur.com/lJPf7Ea.png">
    <div class="card-img-overlay d-flex">
      <div class="my-auto mx-auto text-center">
        <h1 class="card-title text-light">All Machines in Portland</h1>
      </div>
    </div>
  </div>



<div class="card">
  <div class="row">
      @foreach(Machine machine in Model)
      {
        <div class="col-md-3 col-lg-2" >
          <ul>
            <li>@Html.ActionLink($"{@machine.name}", "Details", "Machines", new {machId = @machine.id }, new { @class= "link"})</li>
          </ul>
        </div>
      }
  </div>
</div>
